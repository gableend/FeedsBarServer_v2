# Build stage
FROM node:20-slim AS build
WORKDIR /repo

# Copy workspace manifests
COPY package.json package-lock.json* tsconfig.base.json ./

# Copy packages
COPY shared ./shared
COPY feeds-worker ./feeds-worker

# Install deps at workspace root
RUN npm install

# Build shared + worker
RUN npm run -w @feedsbar/shared build
RUN npm run -w feeds-worker build

# Runtime stage
FROM node:20-slim
WORKDIR /app

COPY --from=build /repo/feeds-worker/dist ./dist
COPY --from=build /repo/feeds-worker/package.json ./package.json
COPY --from=build /repo/feeds-worker/node_modules ./node_modules

ENV PORT=8080
EXPOSE 8080
CMD ["node","dist/index.js"]

